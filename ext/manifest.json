{
    "manifest_version": 3,
    "name": "Guardião de Termos & Privacidade (IA)",
    "version": "0.1.0",
    "description": "Analisa políticas/termos da página com IA e tenta recusar o que der.",
    "action": { "default_popup": "popup/popup.html" },
    "options_page": "options/options.html",
    "permissions": ["storage", "scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js", "extractor.js", "decliner.js"],
        "run_at": "document_idle"
      }
    ]
  }
  